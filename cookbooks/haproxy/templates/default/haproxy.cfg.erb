# this config needs haproxy-1.1.28 or haproxy-1.2.1

global
    #log 127.0.0.1  local0
    #log 127.0.0.1  local1 notice
    #log loghost    local0 info
    maxconn 4096
    #chroot /usr/share/haproxy
    user haproxy
    group haproxy
    daemon
    #debug
    quiet

defaults
    #log    global
    mode    http
    #option httplog
    option  httpclose
    option  forwardfor
    option  dontlognull
    balance roundrobin
    retries 3
    option redispatch
    maxconn 2000
    contimeout  5000
    clitimeout  50000
    srvtimeout  50000

listen loadbalancer <%= node[:ipaddress] %>:88
    <% for server in node[:haproxy][:servers] %>
    server <%= server[:name] %> <%= server[:ip] %> weight 1 check
    <% end %>
    option httpchk GET /httpchk.txt
